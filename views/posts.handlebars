{{#if loggedIn}}

    {{#each posts as |post| }}
    <div class="outter1">
    
        <a href="/post/{{post.id}}"><h2>leave a comment</h2></a>

        <div class="post_title border_post_title">
            <h2>{{post.title}}</h2>
            <div class="post_title ">    
                <h2>Posted by:</h2>
                <h2>{{post.user.username}}</h2>
                <h2>Post date:</h2>
                <h2>{{format_date post.post_date}}</h2>
            </div>
        </div>
        <div class="border_content">
            <p>{{post.post_content}}</p>
        </div>
        <div class="comment_title">
            <div Class="comment outter">
                <h3>Comments</h3>
            </div>
            {{#each post.comments as |comment|}}
                <div Class="comment">
                    <p>{{comment.comment_content}}</p>
                </div>
                <div Class="comment">
                    <div class="comment_date "> 
                        <h3>comment by:</h3>
                        <h3>{{comment.comment_by}}</h3>   
                        <h3>comment date:</h3>
                        <h3>{{format_date comment.comment_date}}</h3>  
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
    {{/each}}
